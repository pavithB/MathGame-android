    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:text="Guess:"
        android:textColor="#4CAF50"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayquestion"
        android:layout_width="246dp"
        android:layout_height="51dp"
        android:layout_marginTop="155dp"
        android:gravity="right"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayanswer"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:text="= ?"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="1"
        android:text="1"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:tag="2"
        android:text="2"

        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="3"
        android:text="3"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="4"
        android:text="4"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="5"
        android:text="5"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintLeft_toRightOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="6"
        android:text="6"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintLeft_toRightOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="7"
        android:text="7"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btndel"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="8"
        android:text="8"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintLeft_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="9"
        android:text="9"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnenter"
        app:layout_constraintLeft_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="0"
        android:text="0"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btndel" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:text="del"
        android:textAlignment="center"
        android:textColor="#cc2900"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />


    <Button
        android:id="@+id/btnenter"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#595959"
        android:gravity="center"
        android:padding="5dp"
        android:text="#"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn0" />


    <Button
        android:id="@+id/btnminus"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp"
        android:tag="-"
        android:text="-"
        android:textColor="#009688"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btnenter"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        tools:layout_editor_absoluteY="549dp" />

    <TextView
        android:id="@+id/displaytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#03A9F4"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayquestion"
        app:layout_constraintVertical_bias="0.14" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="356dp" />

    <ImageView
        android:id="@+id/resultImg"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/result"
        app:layout_constraintLeft_toRightOf="@+id/result" />

    <ToggleButton
        android:id="@+id/hint"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginBottom="118dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:checked="false"
        android:shadowColor="#FFC107"
        android:textColor="#ffffff"
        android:textOff="Hint Off"
        android:textOn="Hint On"
        app:layout_constraintBottom_toTopOf="@+id/btnminus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:id="@+id/hinttext"
        android:layout_width="57dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Hints left:"
        android:textColor="#009688"
        app:layout_constraintLeft_toLeftOf="@+id/hint"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/hint" />

    <TextView
        android:id="@+id/hintNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/hinttext"
        app:layout_constraintRight_toRightOf="@+id/hinttext"
        app:layout_constraintTop_toBottomOf="@+id/hinttext" />


